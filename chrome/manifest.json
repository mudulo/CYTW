{
    "name": "Curb Your Timewasting",
    "description": "Why are you visiting Youtube, Twitter, Facebook now?",
    "version": "1.0",
    "manifest_version": 2,
    "icons": { 
        "16": "icons/stop-16.png",
        "32": "icons/stop-32.png",
        "48": "icons/stop-48.png",
        "128": "icons/stop-128.png"
    },
    "background": {
     "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "webRequest",
        "*://*.youtube.com/*",
        "*://*.twitter.com/*",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "pages/twitter.html",
        "pages/youtube.html"
     ]
}