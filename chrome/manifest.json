{
    "name": "Curb Your Time Wasting",
    "description": "Initially take me to the search results page of YouTube, Twiiter, Reddit not the addictive homepage or feed",
    "version": "1.2",
    "manifest_version": 2,
    "icons": { 
        "16": "icons/stop-16.png",
        "32": "icons/stop-32.png",
        "48": "icons/stop-48.png",
        "128": "icons/stop-128.png"
    },
    "background": {
     "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "webRequest",
        "*://*.youtube.com/*",
        "*://*.twitter.com/*",
        "*://*.reddit.com/*",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "pages/twitter.html",
        "pages/youtube.html",
        "pages/reddit.html"
     ]
}